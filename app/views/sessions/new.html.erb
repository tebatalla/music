<h1>Sign In</h1>

<%= render "users/errors" if flash.now[:errors] %>

<form action="<%= session_url %>" method="post">
  <%= csrf_token %>
  <label>Email
    <input type="text" name="user[email]" value="<%= @user.email %>">
  </label>
  <label>Password
    <input type="password" name="user[password]" value="">
  </label>

  <input type="submit" value="Submit">
</form>
